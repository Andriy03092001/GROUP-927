@model IEnumerable<UniversityManager.Models.NewsViewModel>

@{
    ViewBag.Title = "Index";
}


<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-4">
            <img width="200" src="@Html.DisplayFor(modelItem => item.ImageURL)"/>
            <h2>@Html.DisplayFor(modelItem => item.Title)</h2>
            <p>@Html.DisplayFor(modelItem => item.Description)</p>
            <small>@Html.DisplayFor(modelItem => item.ReleaseDate)</small>
            <p><a class="btn btn-default" href="https://go.microsoft.com/fwlink/?LinkId=301866">Learn more &raquo;</a></p>
        </div>
    }
</div>


